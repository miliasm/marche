<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>marcheSecondaire</display-name>
  <welcome-file-list>
    <welcome-file>accueil.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Inscription</servlet-name>
    <servlet-class>marcheSecondaire.servlets.Inscription</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Inscription</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Connexion</servlet-name>
    <servlet-class>marcheSecondaire.servlets.Connexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Connexion</servlet-name>
    <url-pattern>/connexion</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Deconnexion</servlet-name>
    <servlet-class>marcheSecondaire.servlets.Deconnexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Deconnexion</servlet-name>
    <url-pattern>/deconnexion</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>InvestPot</servlet-name>
    <servlet-class>marcheSecondaire.servlets.InvestPot</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InvestPot</servlet-name>
    <url-pattern>/investPostPages/connected</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CompleterInv</servlet-name>
    <servlet-class>marcheSecondaire.servlets.CompleterInv</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CompleterInv</servlet-name>
    <url-pattern>/investPotPages/completer</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Market</servlet-name>
    <servlet-class>marcheSecondaire.servlets.Market</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Market</servlet-name>
    <url-pattern>/market</url-pattern>
  </servlet-mapping>
</web-app>